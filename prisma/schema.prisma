generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  username  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  reviews   Review[]
}

model Climb {
  id          String   @id @default(cuid())
  rope        String   // Letter: A, B, C, D, etc. (14 ropes = A-N)
  color       String   // Color to identify route on that rope
  grade       String   // e.g., "5.10a", "5.11b"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  reviews     Review[]
  
  @@unique([rope, color]) // Each rope+color combo is unique
}

model Review {
  id        String   @id @default(cuid())
  rating    Int      // 1-5 stars
  comment   String?
  beta      String?
  suggestedGrade String? // User's opinion on grade (might differ from official)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  climbId   String
  climb     Climb    @relation(fields: [climbId], references: [id], onDelete: Cascade)
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([climbId, userId]) // One review per user per climb
}
